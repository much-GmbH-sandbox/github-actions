# Bandit security scanner configuration for Odoo modules
# https://bandit.readthedocs.io/en/latest/config.html

[bandit]
# Exclude test directories (may have intentional security issues for testing)
exclude_dirs = tests,test,*/tests,*/test,.git,__pycache__,node_modules

# Skip specific test IDs that generate false positives in Odoo context
# B101: assert_used - Odoo uses assert in constraints, valid pattern
# B104: hardcoded_bind_all_interfaces - Often false positive in Odoo config
# B311: random - Odoo uses random for non-security purposes (sequences, colors)
skips = B101,B311

# Confidence and severity levels
# Only report issues with HIGH or MEDIUM confidence
# Report all severity levels (LOW, MEDIUM, HIGH)

[bandit.assert_used]
# Skip assert checks entirely - Odoo constraint pattern
skips = *

# SQL injection checks (important for Odoo)
[bandit.hardcoded_sql_expressions]
# These are critical - always check

# Hardcoded password checks
[bandit.hardcoded_password_string]
# These are critical - always check

[bandit.hardcoded_password_funcarg]
# These are critical - always check
